{
	"private": true,
	"name": "jorytindall",
	"description": "Monorepo for my personal website and projects",
	"packageManager": "pnpm@10.13.1",
	"scripts": {
		"web:dev": "turbo run dev --filter=web",
		"web:build": "turbo run build --filter=web",
		"admin:dev": "turbo run dev --filter=admin",
		"admin:build": "turbo run build --filter=admin",
		"tokens:build": "turbo run build --filter=tokens",
		"pres:dev": "turbo run dev --filter=presentations",
		"pres:build": "turbo run build --filter=presentations",
		"api:start": "turbo run start --filter=me-api",
		"format:all": "prettier --write .",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"dev": "turbo run dev"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"prettier": "^3.7.4",
		"turbo": "^2.7.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jorytindall/jorytindall"
	},
	"keywords": [
		"design",
		"design systems",
		"javascript",
		"react",
		"music"
	]
}